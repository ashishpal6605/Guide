<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#5AAFBA"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/screen"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="heading"
        android:layout_below="@+id/img"
        android:textStyle="bold"
        android:textSize="34dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India achieved the status of democratic republic status on 26 January 1950. After becoming completely free from the British administration, the resident nationals in India had the ultimate power in their hands. As per the constitution, people elect their representatives to make decisions. India is a nation of diverse cultures. The 29 states of India and their capitals and language are unique and exciting to learn about the country. Read on to know more. "
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:padding="20dp"/>

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/button1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginBottom="20dp"
           android:layout_marginRight="20dp"
           android:src="@drawable/ic_baseline_my_location_24"/>

</RelativeLayout>